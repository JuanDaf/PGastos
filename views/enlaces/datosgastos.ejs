<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head');%>
    <%- include('../partials/datatables');%>
</head>
<body>
    <header><%- include('../partials/navbar');%></header>

    <%- include('../partials/alertas2');%>

    <div class="container-fluid py-3">
        <table class="table shadow-lg p-3 mb-5 bg-body rounded" id="tabla">
            <thead class="table table-dark table-hover">
              <tr>
                <th scope="col">Tipo</th>
                <th scope="col">Monto</th>
                <th scope="col">Detalle</th>
                <th scope="col">Fecha</th>
                <th scope="col">Acciones</th>
              </tr>
            </thead>
            <tbody>
            <% datos.forEach(function(datos) { %>
              <tr>
                <td><%= datos.Tipo %> </td>
                <td>$ <%= datos.Monto %></td>
                <td><%= datos.Detalle %></td>
                <td><%= datos.Fecha %></td>
                <td> 
                    <a class="btn btn-outline-danger mb-3 " href="/enlaces/borrarg/<%= datos.id_gastos %>">
                        <i class="far fa-trash-alt"></i>
                    </a>
                    <a class="btn btn-outline-success mb-3" id="Registrar" href="" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="dt('<%= datos.Tipo %>','<%= datos.Monto %>','<%= datos.Detalle %>','<%= datos.Fecha %>','<%= datos.id_gastos %>');">
                        <i class="fas fa-pen-square"></i>
                    </a>
                </td>
              </tr>
            <% }); %>
            </tbody>
          </table>
    </div>
   
   <div class="container shadow p-3 mb-5 bg-body rounded">
      <form action="/enlaces/datosingresos" method="POST">
        <div class="row">
          <div class="col-md-4 text-center mx-auto">
            <h5>Generar reporte:</h5>
            <div class="py-3">
              <input class="py-2 border border-info rounded " type="date" id="start" name="Desde" value="" min="" max="">
              <label>  Hasta </label> 
              <input class="py-2 border border-info rounded" type="date" id="start" name="Hasta" value="" min="" max="">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4 py-2 text-center mx-auto">
            <button class="btn btn-outline-primary btn-lg"><i class="fas fa-file-pdf"></i> Generar reporte</button>
          </div>
        </div>
      </form>
   </div>

   <%- include('../enlaces/editarg');%>
  
    <script>
      $(document).ready(function () {
        $("#tabla").DataTable();
      });
    </script>

<footer><%- include('../partials/footer');%></footer>
<script
src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
crossorigin="anonymous"
></script>
<script
src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
crossorigin="anonymous"
></script>
</body>
</html>